<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/bg_main"
    android:layout_height="match_parent"
    tools:context=".FierdActivity">

    <TextView
        android:id="@+id/FierdText"
        android:layout_width="210dp"
        android:layout_height="56dp"
        android:layout_marginTop="21dp"
        android:text="@string/title_fierd"
        android:textColor="@color/white"
        android:textSize="24dp"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </TextView>

    <TextView
        android:id="@+id/CenterFierd"
        android:layout_width="210dp"
        android:layout_height="56dp"
        android:layout_marginTop="183dp"
        android:text="Введенное число"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FierdText"></TextView>

    <TextView
        android:id="@+id/editTextInput1"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_marginTop="65dp"
        android:background="@drawable/enter_back"
        android:hint="Результат"
        android:paddingTop="8dp"
        android:textSize="18dp"
        android:inputType="numberDecimal"
        android:paddingLeft="10dp"
        android:textColor="@color/gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CenterFierd">
    </TextView>

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="162dp"
        android:onClick="registr"
        android:background="@drawable/button"
        android:text="Регистрация"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18dp"

        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextInput1"
        app:layout_constraintVertical_bias="0.0">

    </Button>
</android.support.constraint.ConstraintLayout>